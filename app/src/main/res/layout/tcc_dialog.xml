<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="650dp"
    android:layout_height="450dp"
    android:orientation="vertical"
    android:background="@drawable/bg"
    >
    <TextView
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="40dp"
        android:layout_width="650dp"
        android:layout_height="wrap_content"
        android:text="停车场费率设置（全市统一收费）"
        android:textSize="37dp"
        android:textColor="#000"
        android:background="@drawable/bggary"
        />
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:textColor="#000"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前两种收费方式："
            />
        <TextView
            android:id="@+id/dia_xs"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5元/小时"
            />
        <TextView
            android:id="@+id/dia_cs"
            android:layout_marginLeft="30dp"
            android:textColor="#000"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10元/次"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:textColor="#000"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收费方式："
            />
        <Spinner
            android:id="@+id/dia_sp"
            android:entries="@array/sffs"
            android:layout_width="200dp"
            android:layout_height="wrap_content"></Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="费率金额："
            />
        <EditText
            android:inputType="number"
            android:id="@+id/dia_je"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg"
            android:padding="5dp"
            />
        <TextView
            android:layout_marginLeft="5dp"
            android:textColor="#000"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/dia_ok"
            android:textSize="30dp"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="设置"
            />
        <Button
            android:id="@+id/dia_closs"
            android:layout_marginLeft="70dp"
            android:textSize="30dp"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="取消"
            />
    </LinearLayout>

</LinearLayout>